{% extends 'base.html.twig' %}

{% block body %}
  <!-- nom -->
  <div class="my-3">
    <h1>
      {{entreprise.nom}}
    </h1>
  </div>
  <div class="card my-3">
    <div class="card-body">
    <!-- Activité -->
    <div class="card my-3">
    <div class="card-header">
    Activité :
    </div>
    <div class="card-body">
      {{entreprise.activite}}
    </div>
    </div>

    <!-- Informations -->
    <div class="card my-3">
      <div class="card-header">
        Informations :
      </div>
      <div class="card-body">
      <div class="card my-3">
        <div class="card-header">
          Adresse :
        </div>
        <div class="card-body">
          {{entreprise.adresse}}
        </div>
      </div>
      <div class="card my-3">
      <div class="card-header">
        Site web :
      </div>
        <div class="card-body">
          <a href="{{entreprise.siteWeb}}">{{entreprise.siteWeb}}</a>
        </div>
      </div>
      </div>
      </div>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="mx-1">
      <a class="btn btn-primary" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" role="button">Modifier</a>
    </div>
    <div class="mx-1">
      <a class="btn btn-primary" href="{{ path('entreprise_index') }}" role="button">Retour à la liste</a>
    </div>
    <div class="mx-1">
      {{ include('entreprise/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}
